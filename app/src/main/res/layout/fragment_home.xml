<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".uiOfServiceProvider.ui.home_provider.HomeFragmentProvider">


        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_home_view_o"
            android:visibility="visible">

        </ImageView>

        <LinearLayout
            android:id="@+id/linearname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <com.voise.homeservisegraduateproject.customfonts.MyTextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi "

                android:textColor="@color/white"
                android:textSize="15sp" />


            <com.voise.homeservisegraduateproject.customfonts.MyTextView
                android:id="@+id/text_hi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mohammed "
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>


        <com.voise.homeservisegraduateproject.customfonts.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearname"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="18dp"
            android:text="welcome back ,where you want do in home service today?"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:id="@+id/text_what"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewServiceProvider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_what"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
             android:layout_marginBottom="60dp"
            android:layout_marginEnd="10dp">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
</layout>