<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/mainLayout"
        tools:context=".ui.uiCustomerUser.userSetting.EditAccount.EditAccountFragment">
<include layout="@layout/toolbar"></include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical"
            android:padding="20dp">

            <com.voise.homeservisegraduateproject.customfonts.MyEditText
                android:id="@+id/E_edit_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_selector"
                android:hint="@string/Full_Name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <com.voise.homeservisegraduateproject.customfonts.MyEditText
                android:id="@+id/E_edit_email"

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_selector"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="@color/colorDark"
                android:textSize="13sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_selector"
                android:layoutDirection="ltr"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.7"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arabic">

                    </ImageView>

                    <com.voise.homeservisegraduateproject.customfonts.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="+966"
                        android:textSize="13sp" />

                </LinearLayout>

                <com.voise.homeservisegraduateproject.customfonts.MyEditText
                    android:id="@+id/E_edit_phone"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1.3"
                    android:background="@drawable/shape_phone"
                    android:hint="@string/Phone"
                    android:inputType="phone"
                    android:padding="5dp"
                    android:textColor="@color/colorDark"
                    android:textSize="13sp" />
            </LinearLayout>



            <RelativeLayout
                android:id="@+id/uploadPhoto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/toolbar"
                android:layout_margin="15dp"
                android:background="@drawable/shpe_imageinput">

                <com.voise.homeservisegraduateproject.customfonts.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Image Problem" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_profile" />
            </RelativeLayout>

        </LinearLayout>

        <com.voise.homeservisegraduateproject.customfonts.MyButton
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view"
              android:layout_margin="25dp"
            android:background="@drawable/btn_setting"
            android:text="@string/Send"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_margin="25dp"
            android:background="@drawable/btn_setting"
              />
    </RelativeLayout>
</layout>